[MESSAGES CONTROL]
# Disabled messages for this project:
#   W0142 = *args and **kwargs support
#   W0403 = Relative imports
#   R0201 = Method could be a function
#   W0212 = Accessing protected attribute of client class
#   W0613 = Unused argument
#   W0232 = Class has no __init__ method
#   R0903 = Too few public methods
#   C0301 = Line too long
#   R0913 = Too many arguments
#   C0103 = Invalid name
#   R0914 = Too many local variables
#   F0401 = Unable to import module
#   W0402 = Uses of a deprecated module
#   W0614 = Unused import from wildcard
#   C0111 = Missing docstring

disable = C0103, C0111, C0301, F0401, R0201, R0903, R0913, R0914, \
    W0142, W0212, W0232, W0402, W0403, W0613, W0614

[REPORTS]
# Output report format: (text, parseable, colorized, msvs, html)
output-format = text

# Whether to include message's symbolic ID in output
include-ids = no

# Whether to put messages in files (per input module), else stdout
files-output = no

# Display only lint messages, no full summary report
reports = no
