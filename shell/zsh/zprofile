#!/usr/bin/env zsh

# system executables -> path
export PATH="/usr/bin:/bin:/usr/sbin:/sbin:/usr/libexec:$PATH"

# local system binaries -> path
export PATH="/usr/local/bin:/usr/local/MacGPG2/libexec:$PATH"

# man pages -> manpath
export MANPATH="/usr/local/share/man:/usr/share/man:/usr/local/MacGPG2/share/man:$MANPATH"

# dotfiles bin -> path
export PATH="$DOTFILES/bin/ansi:$PATH"
export PATH="$DOTFILES/bin/tools:$PATH"

# go -> path
export PATH="$GO_PATH/bin:$PATH"
export PATH="$GOROOT/bin:$PATH"

# go bin -> path
export PATH="$HOME/.config/go/bin:$PATH"

# conda -> path
export PATH="$HOME/.config/miniconda3/bin:$PATH"

# java -> path
export PATH="/opt/homebrew/opt/openjdk/bin:$PATH"

# homebrew -> shell
eval "$(/opt/homebrew/bin/brew shellenv)"

# macos paths -> path
for path_file in /etc/paths.d/*(.N); do
  path+=($(<$path_file))
done
unset path_file

# docker -> fpath
export FPATH="$HOME/.docker/completions:$FPATH"

# remove specific paths
path=(${path:#"/Users/dany/.config/miniconda3/bin"})
path=(${path:#"/usr/local/sbin"})

# rm path
fpath=(${fpath:#"/usr/local/share/zsh/site-functions"})

# clear duplicates
typeset -gU fpath path manpath

# set the path for macos
[[ -x /bin/launchctl ]] && /bin/launchctl setenv PATH $PATH
