    "**/bin/tools/*": "shellscript",
    "**/bin/ansi/*": "shellscript",
    // 
    "**/shell/bash/*": "shellscript",
    "**/shell/config/*": "shellscript",
    "**/shell/zsh/*": "shellscript",
