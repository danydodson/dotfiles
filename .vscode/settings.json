{
  "files.associations": {
    ".gitignore": "ignore",
    "install": "shellscript",
    // 
    "**/bash/*": "shellscript",
    // 
    "**/bin/scripts/*": "shellscript",
    "**/bin/scripts/*.py": "python",
    "**/bin/*": "shellscript",
    "**/bin/jwt-pem.py": "python",
    // 
    "**/config/ghostty/config": "inputrc",
    "**/config/git/ignore": "ignore",
    "**/config/git/config": "properties",
    "**/config/git/secret": "properties",
    "**/config/lscolors/ls_colors": "dircolors",
    "**/config/sketchybar/sketchybarrc": "lua",
    // 
    "**/macos/agents/*": "xml",
  },
  "shellcheck.ignorePatterns": {
    "**/*.zsh": true,
    "**/config/**/*": true,
    "**/plugins/**/*": true,
  }
}