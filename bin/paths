#!/bin/bash

# Pretty list $PATH directories

paths() {
  local green="\033[32m"
  local blue="\033[34m"
  local red="\033[31m"
  local reset="\033[0m"

  IFS=':' read -r -a path_array <<<"$PATH"

  for dir in "${path_array[@]}"; do
    if [[ -d "$dir" ]]; then
      echo -e "${green}✓${reset} ${blue}$dir${reset}"
    else
      echo -e "${red}✗${reset} $dir"
    fi
  done
}

paths