#!/usr/bin/env bash

# Gets macOS software, Homebrew and npm updates and cleans trash and logs.

. "$HOME/.dotfiles/ansi/feedback.sh"

trap on_error SIGTERM

sudo -v

while true; do
  sudo -n true
  sleep 60
  kill -0 "$$" || exit
done 2>/dev/null &

function update_macos_apps() {
  info "Updating macOS..."
  sudo -v
  sudo softwareupdate -i -a
  finish
}

function update_homebrew_packages() {
  info "Updating Homebrew packages..."
  sudo -v
  brew update --force
  brew upgrade
  brew doctor
  finish
}

function clean_up() {
  info "Cleaning homebrew packages..."
  brew autoremove
  brew cleanup --prune=all --scrub
  info "Cleaning pip cache..."
  /Users/stache/.config/miniconda3/bin/pip cache purge
  info "Emptying trash and cleaning logs..."
  command rm -rfv ~/.Trash/*
  command rm -rfv /Volumes/*/.Trashes
  finish
}

update() {
  update_macos_apps "$*"
  update_homebrew_packages "$*"
  clean_up "$*"
  on_finish "$*"
}

update "$*"
