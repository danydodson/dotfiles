#!/usr/bin/env bash

function watch_log() {
  case "$1" in
    nginx-access)
      tail -f /opt/homebrew/var/log/nginx/access.log
      ;;
    nginx-error)
      tail -f /opt/homebrew/var/log/nginx/error.log
      ;;
    sketchybar-out)
      tail -f /opt/homebrew/var/log/sketchybar/sketchybar.out.log
      ;;
    sketchybar-err)
      tail -f /opt/homebrew/var/log/sketchybar/sketchybar.err.log
      ;;
    borders-out)
      tail -f /opt/homebrew/var/log/borders/borders.out.log
      ;;
    borders-err)
      tail -f /opt/homebrew/var/log/borders/borders.err.log
      ;;
    *)
      echo "Usage: $0 {nginx-access|nginx-error|sketchybar-out|sketchybar-err|borders-out|borders-err}"
      ;;
  esac
}

watch_log "$1"

